<launch>


  <node name="usb_cam" pkg="usb_cam" type="usb_cam_node" output="screen" >
    <param name="video_device" value="/dev/v4l/by-id/usb-046d_C922_Pro_Stream_Webcam_9FB9575F-video-index0" />
    <param name="image_width" value="1280"/>
    <param name="image_height" value="720" />
    <param name="pixel_format" value="yuyv" />
    <param name="color_format" value="yuv422p" />
    <param name="camera_frame_id" value="usb_cam" />
    <param name="io_method" value="mmap"/>
    <param name="camera_info_url" value="file://$(find ar_track_alvar)/config/c922.yaml"/>

  </node>

  <node pkg="tf" type="static_transform_publisher" name="base_link_to_usb_cam" args="0.5 0 -0.07 0 0 0 base_footprint usb_cam 100" />

</launch>
